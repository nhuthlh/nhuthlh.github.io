<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p><br>

<% postList.forEach(function(post) { %>
    <h2><%= post.title %></h2>
    <% if (post.body.length > 120) { %>
        <p style="display:inline"><%=post.body.substring(0, 120) + " ..." %></p>
        <a href="/posts/<%=post.title%>">Read more</a>
    <% } else { %>
        <p><%= post.body %></p>
    <% } %>
<% }) %>

<%- include("partials/footer"); -%>